@model AddEmployeeForm

<h2>Add New Employee</h2>

<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CivilId">CivilId:</label>
        <input asp-for="CivilId" class="form-control" required>
        <span asp-validation-for="CivilId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position">Position:</label>
        <input asp-for="Position" class="form-control" required>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
  
    <button type="submit" class="btn btn-primary">Submit</button>
</form>