@{
}
@model List<BankBranch> 
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Branch Manager</th>
            <th>Employee Count</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Bank", new { id = branch.Id })">@branch.Name</a></td>
                <td><a href="@branch.Location">🗺️</a></td>
                <td>@branch.BranchManager</td>
                <td>@branch.EmployeeCount</td>
                <td><a class="btn btn-primary" href="@Url.Action("Edit", "Bank", new { id = branch.Id })">Edit ✒️</a></td>
            </tr>
        }
    </tbody>
    
</table>